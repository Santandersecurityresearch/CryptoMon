[Unit]
Description=Cryptography Monitor Service
After=multi-user.target

[Service]
Type=simple
Restart=always
WorkingDirectory=/media/share
Environment="DB_URL=mongodb://cmon:Password.1@0.0.0.0:27017/cryptomon?retryWrites=true&w=majority"
Environment="DB_NAME=cryptomon"
ExecStart=/usr/bin/python3 /media/share/cryptomon.py

[Install]
WantedBy=multi-user.target
